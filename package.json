{
  "name": "Alon-Fibert",
  "version": "1.0.0",
  "description": "Reco home assigment",
  "main": "dist/index.js",
  "scripts": {
    "install:app": "npm i && concurrently \"cd server && npm i\" \"cd client && npm i && npm i @mui/styles --force\"",
    "start:client": "cd client && npm start",
    "start:server": "nodemon --watch server --exec ts-node server/server.js",
    "start": "concurrently \"npm run start:server .env\" \"npm run start:client .env\"",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Alon Fibert - alonfib@gmail.com",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.1"
  }
}
